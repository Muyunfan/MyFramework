<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_no_label"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_15"
            android:gravity="center"
            android:text="单号"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_20"
            android:layout_toLeftOf="@+id/tv_task_status"
            android:layout_toRightOf="@+id/tv_no_label"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_task_status"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/content_padding_15"
            android:gravity="center"
            android:textSize="@dimen/text_size_11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_no_label"
            android:background="@color/color_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_15"
            android:gravity="center"
            android:text="电话"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_20"
            android:layout_marginRight="@dimen/content_padding_15"
            android:layout_toLeftOf="@+id/iv_phone"
            android:layout_toRightOf="@+id/tv_phone_label"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/content_padding_15"
            android:src="@mipmap/ico_phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_phone_label"
            android:background="@color/color_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address_label"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_15"
            android:gravity="center"
            android:text="地址"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_20"
            android:layout_marginRight="@dimen/content_padding_15"
            android:layout_toLeftOf="@+id/iv_address"
            android:layout_toRightOf="@+id/tv_address_label"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/content_padding_15"
            android:src="@mipmap/ico_detail_location" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_address_label"
            android:background="@color/color_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_label"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_15"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/content_padding_20"
            android:layout_toRightOf="@+id/tv_date_label"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_size_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_date_label"
            android:background="@color/color_line" />
    </RelativeLayout>
</LinearLayout>