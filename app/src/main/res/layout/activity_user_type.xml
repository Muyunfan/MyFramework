<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:id="@+id/ll_user_normal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="75dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.muyunfan.fw.widget.view.IconFontTextView
            android:id="@+id/tv_user_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="@string/icon_user_normal"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_blue_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.5dp"
            android:text="普通用户"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_worker"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="75dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.muyunfan.fw.widget.view.IconFontTextView
            android:id="@+id/tv_worker"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="@string/icon_new_task"
            android:gravity="center"
            android:textSize="90sp"
            android:textColor="@color/color_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.5dp"
            android:text="维修人员"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>
</RelativeLayout>
