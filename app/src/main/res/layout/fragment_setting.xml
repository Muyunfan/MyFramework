<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginTop="@dimen/content_padding_10"
                android:background="@color/color_white"
                android:padding="@dimen/content_padding_15">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_head_default" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/content_padding_15"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"
                    android:layout_toRightOf="@+id/iv_head"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_auth"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/iv_head"
                    android:layout_marginLeft="@dimen/content_padding_15"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:drawableLeft="@mipmap/ico_auth"
                    android:background="@drawable/bg_green_corner_radius"
                    android:gravity="center_vertical"
                    android:text="已认证"
                    android:textColor="@color/color_green"
                    android:textSize="9sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_account_type"
                    android:layout_width="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_auth"
                    android:background="@drawable/bg_gray_corner_radius"
                    android:gravity="center"
                    android:text="维修人员"
                    android:textColor="@color/color_gray"
                    android:textSize="9sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_all_task"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/content_padding_10">

                <ImageView
                    android:id="@+id/iv_all_task"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_task"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="全部订单"
                    android:textSize="@dimen/text_size_15"
                    android:layout_toRightOf="@+id/iv_all_task"
                    android:layout_marginLeft="@dimen/content_padding_10"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_item_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_padding_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_change_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/iv_change_password"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_change_password"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="修改密码"
                    android:textSize="@dimen/text_size_15"
                    android:layout_toRightOf="@+id/iv_change_password"
                    android:layout_marginLeft="@dimen/content_padding_10"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_item_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_padding_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_scan"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/iv_scan"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_scan"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="扫一扫"
                    android:textSize="@dimen/text_size_15"
                    android:layout_toRightOf="@+id/iv_scan"
                    android:layout_marginLeft="@dimen/content_padding_10"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_item_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_padding_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_score"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/iv_score"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_score"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="评分"
                    android:textSize="@dimen/text_size_15"
                    android:layout_toRightOf="@+id/iv_score"
                    android:layout_marginLeft="@dimen/content_padding_10"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_item_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_padding_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white">

                <ImageView
                    android:id="@+id/iv_about"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_about"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/content_padding_15"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="关于"
                    android:textSize="@dimen/text_size_15"
                    android:layout_toRightOf="@+id/iv_about"
                    android:layout_marginLeft="@dimen/content_padding_10"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_item_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/content_padding_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_logout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/color_white"
                android:layout_marginTop="@dimen/content_padding_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_red"
                    android:layout_centerInParent="true"
                    android:text="退出登录"
                    android:textSize="@dimen/text_size_15"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_line"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
